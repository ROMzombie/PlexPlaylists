html
  head
    title= playlistName.substring(1) +" on "+ serverName
    style
      include styles.css
  body
    h1 #{playlistName.substring(1)}
    ul
      each item, index in items
        - var image = '/image?key=' + item.thumb
        - var imageStyle = 'background-image:url(' + image + ');background-size:contain;'
        a(target="_blank" href="https://app.plex.tv/web/app#!/server/"+ serverId +"/details?key="+ encodeURIComponent(item.key))
          li.item(style=imageStyle)
